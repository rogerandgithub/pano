                <div class="toast-center-wrapper">
                    <div>
                        <div class="toast-body">
                            <div class="merge" v-for="merger in mergeList">
                                <span class="title" v-text="merger.title"></span><i class="icon-remove-sign" @click="delgroup(merger.id)"></i>
