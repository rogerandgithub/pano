    <script type="text/javascript">
        var timer;
        var menubox = new Vue({
            el: '#menubox',
            data: {
                readcount: ''
            }
        });
        var editmerge = new Vue({
            el: '#editmerge',
            data: {
                showeditmerge: false,
                mergeList: [],
                mergeid: ''
            },
            methods: {
                hide: function(){
                    this.showeditmerge = false;
                    this.mergeList = [];
                },
                delgroup: function(groupid){
                    var _this = this;
                    for(var i in this.mergeList){
                        if(this.mergeList[i].id == groupid){
                            var index = i;
                            break;
                        };
                    }
                    var data = {
                        mergeid: this.mergeid,
                        groupid: groupid
                    }
                    $.post('/mergeitem/delgroup',data,function(res){
                        if(res.code != 0){
                            toast.showmsg('删除失败，请重新再试',true);
                            return;
                        }
                        _this.mergeList.splice(index,1);
                        for(var i in panolist.panolist){
                            if(panolist.panolist[i].id == _this.mergeid){
                                var index = i;
                                break;
                            }
                        }
                        if(_this.mergeList.length<1){
                            panolist.panolist.splice(index,1);
                        }
                        toast.showmsg('删除成功');
                        setTimeout(function(){
                            _this.hide();
                        },400)
                    })
                }
            }
        })
        var delmerge = new Vue({
            el: '#delmerge',
            data: {
                showtptoast: false,
                delepsw: '',
                callback: null,
                global: true,
                id: 0,
                expire: false
            },
            computed: {
                disabled: function(){
                    return !this.delepsw&&!this.expire;
                }
            },
            methods: {
                show: function(expire, fun, id){
                    this.expire = expire;
                    if(!id||isNaN(id)){
                        toast.showmsg('I need a id-value');
                        return;
                    }
                    this.id = id;
                    this.showtptoast = true;
                    this.$nextTick(function(){
                        $('#deletepsw').focus();
                    });
                    if(fun&&typeof fun == 'function')this.fun = fun;
                },
                hide: function(){
                    this.showtptoast = false;
                    this.delepsw = '';
                },
                submit: function(){
                    var data = {
                        id: this.id,
                        deletepsw: this.delepsw
                    };
                    
                    var _this = this;
                    $.post('/mergeitem/delmerge',data,function(res){
                        if(res.code!=0){
                            toast.showmsg(res.msg, true);
                            return;
                        }
                        toast.showmsg('删除成功');
                        _this.fun();
                        setTimeout(function(){
                            _this.hide();
                        }, 300);
                    });
                }
            }
        });
        var search = new Vue({
            el: '#search-container',
            data: {
                isshow: false,
                showcitySel: false,
                showsharebtn: false,
                showpro: true,
                showcity: false,
                showregion: false,
                showeditwhere: false,
                showeditwhich: false,
                province: province,
                cities: [],
                regions: [],
                open: false,
                selected: {
                    start: '2015/01/01',
                    end: (new Date()).getFullYear()+'/'+(parseInt((new Date()).getMonth())+1)+'/'+(new Date()).getDate()
                }
            },
            methods:{
                orderby: function(key){
                    editpano.showsettings = false;
                    panolist.pagindex = 1;
                    panolist.orderkey = key?key:'';
                    this.open = false;
                    setTimeout(function(){
                        panolist.loadimages();
                    }, 300);
                }
            }
        });

        var panolist = new Vue({
            el: '#panolist',
            data: {
                name: '',
                username: '',
                orderkey: '',
                panolist: [],
                lazyloadarr: [],
                count: 0,
                pages: 0,
                pagindex: 1,
                isshowload2: true,
                limit: 8,
                index: undefined,
                num:0,
                showname: false,
                expire: <%=Date.parse(expire)<Date.now()%>,
                searchobj: {
                    start: '2015/01/01',
                    end: (new Date()).getFullYear()+'/'+(parseInt((new Date()).getMonth())+1)+'/'+(new Date()).getDate()
                }
            },
            computed: {
                offset: function(){
                    return (this.pagindex-1)*this.limit;
                },
                pages: function(){
                    return Math.ceil(this.count/this.limit);
                }
            },
            methods: {
                loadimages: function(){
                    var _this = this;
                    var loaded=0;
                    var count = _this.lazyloadarr.length;
                    for(var i=0;i<_this.limit;i++){
                        var img = new Image();
                        img.onload = function(){
                            $('.img-box img').eq(loaded).attr('src', $('.img-box img').eq(loaded).attr('data-src'));
                            loaded++;
                        }
                        img.src = _this.lazyloadarr[_this.offset+loaded];
                    }
                },
                init: function(){
                    var _this = this;
                    $.get('/mergeitem/json',function(res){
                        _this.count = res.lists.length;
                        for(var i in res.lists){
                            res.lists[i].createdTime = Date.parse(new Date(res.lists[i].createdAt));
                            res.lists[i].createdAt = (new Date(res.lists[i].createdAt)).toLocaleDateString();
                            res.lists[i].thumburl = res.lists[i].groups[0].thumbsrc;
                            _this.lazyloadarr.push(res.lists[i].thumburl);
                            _this.panolist.push(res.lists[i]);
                        }
                        _this.pagindex = 1;
                        _this.loadimages();
                        _this.$nextTick(function(){
                            _this.isshowload2 = false;
                            editpano.init();
                        });
                        loading1.hideloading();
                        nav.issearch2 = true;
                        nav.current.merge = true;
                        $('#reservation').daterangepicker(null, function(start, end, label,e) {});
                        setTimeout(function(){
                            _this.showname = nav.children.length > 0;
                        },300);
                    });
                },
                setlimit: function(width){
                    var _this = this;
                    clearTimeout(timer);
                    timer = setTimeout(function(){
                        if(width>=1500){
                            _this.limit = 8;
                        }else if(width>640 && width<1500){
                            _this.limit =6;
                        }else{
                            _this.limit = 8;
                        }
                        _this.loadimages();
                    }, 300);
                },
                addshare: function(id, name){
                    if(name != this.username){
                        toast.showmsg('不能选择该多项目');
                        return;
                    }
                    var index;
                    for(var i in search.shareArr){
                        if(search.shareArr[i].id == id){
                            index = i;
                            break;
                        }
                    }
                    var index_id = search.shareid.indexOf(id);
                    search.shareArr[index].isshare = !search.shareArr[index].isshare;
                    search.shareArr[index].isshare?search.shareid.push(id):search.shareid.splice(index_id,1);
                },
                load: function(cur){
                    if(cur!=this.pagindex){
                        if(cur<1){
                            toast.showmsg('当前就是首页了！', true);
                            return;
                        }
                        if(cur>this.pages){
                            toast.showmsg('没有下一页了', true);
                            return;
                        }
                        editpano.showedit = true;
                        editpano.showsettings = false;
                        this.pagindex = cur;
                        var _this = this;
                        setTimeout(function(){
                            _this.loadimages();
                        }, 300);
                    }
                },
                getdata: function(id){
                    for(var i in this.panolist){
                        if(this.panolist[i].id == id) this.num = i;
                    }
                    this.index = this.num;
                    editpano.index = this.num;
                },
                previewsence: function(id){
                    this.getdata(id);
                    editpano.skin(this.panolist[this.num]);
                    editpano.secneurl = 'http://wx.sz-sti.com/scene?prokey=' + this.panolist[this.num].key + '&preview=3';
                    editpano.showbox = true;
                },
                copyurl: function(id){
                    this.getdata(id);
                    editpano.prokey = this.panolist[this.num].key;
                    editpano.copyinit();
                },
                qrsence: function(id){
                    this.getdata(id);
                    var url = 'http://wx.sz-sti.com/scene?prokey='+this.panolist[this.num].key;
                    qrtoast.show(url, this.village);
                },
                deletesence: function(id){
                    this.getdata(id);
                    delmerge.show(this.expire, function() {
                        panolist.deletepano();
                    }, this.panolist[this.num].id, true);
                },
                showedit: function(){
                    editpano.show();
                },
                deletepano: function(){
                    this.panolist.splice(this.index,1);
                },
                editboxup: function(id){
                    this.getdata(id);
                    editpano.skin(this.panolist[this.num]);
                },
                editscene: function(id){
                    $.get('/mergeitem/getmerge/'+ id,function(res){
                        for(var i in res.merges){
                            res.merges[i].title = res.merges[i].city + res.merges[i].region + res.merges[i].community + res.merges[i].building + '栋' + res.merges[i].room + '号';
                            editmerge.mergeList.push(res.merges[i]);
                        }
                    })
                    editmerge.showeditmerge = true;
                    editmerge.mergeid = id;
                }
            }
        }); 
        
        var editpano = new Vue({
            el: '#editpano',
            data: {
                showedit: false,
                showsettings: false,
                region: '',
                prokey: '',
                thumb: 2896,
                updated: '',
                created: '',
                isshow: '',
                showbox:false,
                index:0,
                url: 'http://wx.sz-sti.com/scene?prokey='+this.prokey,
                groupid: 0,
                secneurl:'',
                editobj: {
                    village: '',
                    business_circle: '',
                    community: '',
                    building: '',
                    room: '',
                    scenekey: '',
                    autoplay: true,
                    recommend: false
                }
            },
            methods: {
                init: function(){
                    this.showedit = true;
                },
                show: function(){
                    this.isshow = 'isshow';
                },
                hide: function(){
                    this.showbox = false;
                },
                skin: function(obj){
                    this.showsettings = true;
                    this.region = obj.city+'市'+obj.region+'区';
                    this.editobj.village = obj.business_circle + obj.community;
                    this.editobj.business_circle = obj.business_circle;
                    this.editobj.community = obj.community;
                    this.editobj.building = obj.building;
                    this.editobj.room = obj.room;
                    this.editobj.autoplay = obj.autoplay;
                    this.editobj.recommend = obj.recommend;
                    this.prokey = obj.key;
                    this.thumb = obj.kind == 2? 1000:2896;
                    this.updated = obj.updatedAt.slice(0,10);
                    this.created = obj.createdAt.slice(0,10);
                    this.groupid = obj.id;
                    this.copyinit();
                },
                preview: function(){
                    window.open('scene?key='+this.prokey);
                },
                copyinit: function(){
                    var _this = this;
                    this.$nextTick(function(){
                        clip = new ZeroClipboard($(".copyurl"), {
                            moviePath: "/js/new/copylink.swf"
                        });
                        clip.on('mousedown', function(client) {
                            clip.setText('http://wx.sz-sti.com/scene?prokey='+_this.prokey);
                        });
                        clip.on('mouseover', function(client) {
                            $(this).parent().css('background','rgba(25,25,25,0.81)');
                            $('ul.description').css('background','rgba(25,25,25,0)');
                            $(this).parent().parent().parent('.editbox').css('bottom','0');
                        });
                        clip.on('mouseout', function(client) {
                            $(this).parent().parent().parent('.editbox').attr('style','');
                            $(this).parent().css('background','rgba(25,25,25,0)');
                        });
                        clip.on('complete', function(client, args) {
                            toast.showmsg('该场景外链已复制到剪贴板');
                        });
                    });
                },
                showqr: function(){
                    var url = 'http://wx.sz-sti.com/scene?prokey='+this.prokey;
                    qrtoast.show(url, this.village);
                    qrtoast.showbox = 1;
                    setTimeout(function(){
                        this.showbox = false;
                    },300)
                },
                fullscreen: function(){
                    var url = 'http://wx.sz-sti.com/scene?prokey='+this.prokey;
                    window.open(url);
                },
                showtp: function(){
                    setTimeout(function(){
                        this.showbox = false;
                    },300)
                    var _this = this;
                    trashpano.showbox = 1;
